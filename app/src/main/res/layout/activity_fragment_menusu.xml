<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="project.twitter.bigdata.twtitteranaliz.ClassYapilari.Aktiviteler.FragmentMenusu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:elevation="1dp"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Text Mining Nedir"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/mutluluk_orani_btn"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Mutluluk Oranı"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hangi Takımlı"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Etkileşim"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Bütün Tweetler"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:weightSum="5">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/activity17_icon1" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Analiz Bilgileri"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_weight="2"
        android:id="@+id/fragment_tutucu"
        android:layout_width="match_parent"
        android:layout_height="1dp"></FrameLayout>

</LinearLayout>
