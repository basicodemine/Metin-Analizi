<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.twitter.bigdata.twtitteranaliz.ClassYapilari.Aktiviteler.FragmentYapilari.Duygu_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/mutluluk_yuzde"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="5"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Mutluluk"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/mutsuz_yuzde"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="5"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Üzgün"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/alakasiz_yuzde"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="5"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Normal"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="MUTLU"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/mutlu_goster_button"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Mutlu Tweetler"
            android:textSize="13dp" />


        <Button
            android:id="@+id/mutsuz_goster_button"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Mutsuz Tweetler"
            android:textSize="13dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/testlistesi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
